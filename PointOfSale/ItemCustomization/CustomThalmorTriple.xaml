<UserControl x:Class="PointOfSale.ItemCustomization.CustomThalmorTriple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3" TextAlignment="Center" FontSize="30">Customize Briarheart Burger</TextBlock>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <CheckBox FontSize="23" IsChecked="{Binding Path=Bun}" BorderThickness="8">Bun</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Ketcup}" BorderThickness="8">Ketchup</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Mustard}" BorderThickness="8">Mustard</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Pickle}" BorderThickness="8">Pickle</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Cheese}" BorderThickness="8">Cheese</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Tomato}" BorderThickness="8">Tomato</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Letuce}" BorderThickness="8">Lettuce</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Mayo}" BorderThickness="8">Mayo</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Bacon}" BorderThickness="8">Bacon</CheckBox>
            <CheckBox FontSize="23" IsChecked="{Binding Path=Egg}" BorderThickness="8">Egg</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
